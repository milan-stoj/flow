@model Flow.ViewModels.WorkstationKioskViewModel

<div class="row align-items-center py-3">
    <div class="col-sm">
        <a asp-action="CheckOutPart" asp-route-id="@Model.Workstation.ID" class="btn btn-block btn-warning shadow">Check-out Part</a>
    </div>
    <div class="col-sm">
        <button  class="btn btn-block btn-success shadow" data-toggle="modal" data-target="#ModalCenter">Remove QA Hold</button>
    </div>
    <div class="col-sm">
        <a asp-action="Logout" asp-route-id="@Model.Workstation.ID" class="btn btn-block btn-warning shadow">Check-out of Workstation</a>
    </div>
</div>


<!-- Modal -->
<div class="modal fade text-dark" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="RemoveHold">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ApplicationUser.Email" class="control-label"></label>
                        <input asp-for="ApplicationUser.Email" value="" class="form-control" />
                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group" hidden>
                        <input asp-for="Workstation.CurrentUnit" value="@Model.Workstation.CurrentUnit" class="form-control" />
                        <span asp-validation-for="Workstation.CurrentUnit" class="text-danger"></span>
                    </div>
                    <div class="form-group" hidden>
                        <input asp-for="Workstation.ID" value="@Model.Workstation.ID" class="form-control" />
                        <span asp-validation-for="Workstation.ID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
