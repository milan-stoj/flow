@model Flow.Models.Unit


@{
    ViewData["Title"] = "CheckInPart";
}

<h1 class="display-4">Scan Part Tag</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckInPart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  asp-for="UnitNumber" class="control-label" ></label>
                <input asp-for="UnitNumber" class="form-control" autofocus/>
                <span asp-validation-for="UnitNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to Kiosk</a>
</div>

