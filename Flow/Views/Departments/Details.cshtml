@model Flow.ViewModels.DepartmentDetailsViewModel

@{
    ViewData["Title"] = $"Department {Model.Department.Code} - {Model.Department.Name}";
}

<h1>Details</h1>

<div>
    <h4>Department @Model.Department.Code - @Model.Department.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Bay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Bay)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Department.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h1>Workstations</h1>
<p>
    <a asp-controller="Workstations" asp-action="Create" asp-route-id="@Model.Department.ID">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Workstations.FirstOrDefault().Online)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workstations.FirstOrDefault().Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Workstations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Online)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.ID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
