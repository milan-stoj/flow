@model IEnumerable<Flow.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Employees</h1>
<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>
                <a class="btn btn-sm btn-dark"asp-action="Edit" asp-route-id="@item.Id">Change Role</a> |
                <a class="btn btn-sm btn-danger"asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a class="btn btn-sm btn-dark" asp-area="Identity" asp-page="/Account/RegisterAsAdmin">Register</a>
</p>

